ARG TAG="20190806"
ARG NETCDF_VERSION="4.7.0"
ARG HDF5_VERSION="1.10.5"
ARG BASEIMAGE="huggla/hdf5:1.10.5"
ARG ADDREPOS="http://dl-cdn.alpinelinux.org/alpine/edge/testing"
ARG BUILDDEPS="build-base"
