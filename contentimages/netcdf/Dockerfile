ARG DESTDIR="/app"
ARG BUILDCMDS=\
"   cd /netcdf-c-$NETCDF_VERSION "\
'&& $COMMON_CONFIGURECMD --enable-static=no --enable-fsync --enable-dynamic-loading --disable-utilities --disable-testsets '\
'&& $COMMON_MAKECMDS'

#--------Generic template (don't edit)--------
FROM ${CONTENTIMAGE1:-scratch} as content1
